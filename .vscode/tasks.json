{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "watch:extension",
      "type": "npm",
      "script": "watch",
      "path": "apps/extension",
      "problemMatcher": "$tsc-watch",
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "compile:extension",
      "type": "npm",
      "script": "compile",
      "path": "apps/extension",
      "problemMatcher": [],
      "presentation": {
        "reveal": "silent"
      },
      "group": "build"
    }
  ]
}
