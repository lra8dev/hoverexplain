{
  "publisher": "luckyra8od",
  "name": "hoverexplain",
  "displayName": "HoverExplain",
  "version": "1.2.0",
  "description": "Instant code understanding, right under your cursor.",
  "license": "MIT",
  "galleryBanner": {
    "color": "#09090b",
    "theme": "dark"
  },
  "homepage": "https://github.com/lra8dev/hoverexplain/blob/main/apps/extension/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/lra8dev/hoverexplain.git",
    "directory": "apps/extension"
  },
  "bugs": {
    "url": "https://github.com/lra8dev/hoverexplain/issues"
  },
  "keywords": [
    "ai",
    "gemini",
    "documentation",
    "hover",
    "explanation",
    "developer-tools",
    "vscode-extension",
    "typescript",
    "context-aware",
    "productivity",
    "summary",
    "code-understanding",
    "hover-tooltip",
    "assistant"
  ],
  "categories": [
    "AI",
    "Programming Languages",
    "Education",
    "Other"
  ],
  "main": "./dist/extension.js",
  "icon": "assets/icon.png",
  "extensionKind": ["workspace"],
  "pricing": "Free",
  "engines": {
    "vscode": "^1.108.1"
  },
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:javascript",
    "onLanguage:go",
    "onLanguage:java",
    "onLanguage:c",
    "onLanguage:cpp",
    "onLanguage:csharp"
  ],
  "contributes": {
    "commands": [
      { "command": "hoverexplain.signin", "title": "HoverExplain: Sign In" },
      { "command": "hoverexplain.signout", "title": "HoverExplain: Sign Out" },
      { "command": "hoverexplain.toggle", "title": "HoverExplain: Toggle On/Off" }
    ],
    "configuration": {
      "title": "HoverExplain",
      "properties": {
        "hoverexplain.debounceTime": {
          "type": "number",
          "default": 600,
          "description": "Delay in milliseconds before triggering a hover explanation.",
          "minimum": 0,
          "maximum": 2000
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "package:vsce": "pnpm dlx @vscode/vsce package --no-dependencies",
    "compile": "pnpm run check:types && pnpm run lint && node esbuild.js",
    "watch": "node esbuild.js --watch",
    "typecheck:watch": "tsc -watch -p ./",
    "package": "pnpm run check:types && pnpm run lint && node esbuild.js --production",
    "check:types": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "@hoverexplain/validators": "workspace:*"
  },
  "devDependencies": {
    "@hoverexplain/eslint-config": "workspace:*",
    "@types/node": "catalog:types",
    "@types/vscode": "^1.108.1",
    "esbuild": "catalog:tooling",
    "eslint": "catalog:tooling",
    "typescript": "catalog:core"
  }
}
